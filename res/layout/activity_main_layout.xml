<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <ProgressBar
            android:id="@+id/main_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.94"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/_index_tab_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/index_main_icon"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginTop="@dimen/x4" />

            <TextView
                android:id="@+id/index_main_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x4"
                android:layout_marginTop="@dimen/x1"
                android:text="首 页"
                android:textColor="@color/index_botton_font_color"
                android:textSize="@dimen/x11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_index_tab_near"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x4"
            android:paddingTop="@dimen/x4" >

            <ImageView
                android:id="@+id/index_near_icon"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23" />

            <TextView
                android:id="@+id/index_near_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x1"
                android:text="附 近"
                android:textColor="@color/index_botton_font_color"
                android:textSize="@dimen/x11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_index_tab_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x4"
            android:paddingTop="@dimen/x4" >

            <ImageView
                android:id="@+id/index_like_icon"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23" />

            <TextView
                android:id="@+id/index_like_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x1"
                android:text="收 藏"
                android:textColor="@color/index_botton_font_color"
                android:textSize="@dimen/x11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_index_tab_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x4"
            android:paddingTop="@dimen/x4" >

            <ImageView
                android:id="@+id/index_my_icon"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23" />

            <TextView
                android:id="@+id/index_my_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x1"
                android:text="我 的"
                android:textColor="@color/index_botton_font_color"
                android:textSize="@dimen/x11" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
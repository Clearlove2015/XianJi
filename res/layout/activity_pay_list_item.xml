<?xml version="1.0" encoding="utf-8"?>
<com.schytd.discount.ui.View.LayoutRipple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y60"
    android:minHeight="@dimen/y60"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:before_color="#ffffff" >

    <TextView
        android:id="@+id/pay_list_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:text="商家名"
        android:textColor="@color/Indigo_nav_color"
        android:textSize="@dimen/x16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pay_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="#666666" 
            android:text="原价" />

        <TextView
            android:id="@+id/pay_list_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="折扣价"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/pay_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:text="时间"
        android:textColor="#666666" />

</com.schytd.discount.ui.View.LayoutRipple>